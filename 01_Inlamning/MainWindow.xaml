<Window x:Class="_01_Inlamning.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_01_Inlamning"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="800">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>

        <Button x:Name="btnAdd" Grid.Column="0" Grid.Row="1" Margin="50 20" Content="Lägg till deltagare" Click="btnAdd_Click"/>
        <Button x:Name="btnView" Grid.Column="0" Grid.Row="2" Margin="50 20" Content="Lista på deltagare" Click="btnView_Click"/>
        <Button x:Name="btnSale" Grid.Column="0" Grid.Row="3" Margin="50 20" Content="Rabattkod" Click="btnSale_Click"/>
        <Button x:Name="btnQuit" Grid.Column="0" Grid.Row="4" Margin="50 20" Content="Avsluta programmet" Click="btnQuit_Click"/>


        <Border Grid.Row="0"
            BorderBrush="Black"
            BorderThickness="1"
            Background="#c9c9c9"
            HorizontalAlignment="Right"/>
        <Border Grid.Row="1"
            BorderBrush="Black"
            BorderThickness="1"
            Background="#c9c9c9"
            HorizontalAlignment="Right"/>
        <Border Grid.Row="2"
            BorderBrush="Black"
            BorderThickness="1"
            Background="#c9c9c9"
            HorizontalAlignment="Right"/>
        <Border Grid.Row="3"
            BorderBrush="Black"
            BorderThickness="1"
            Background="#c9c9c9"
            HorizontalAlignment="Right"/>
        <Border Grid.Row="4"
            BorderBrush="Black"
            BorderThickness="1"
            Background="#c9c9c9"
            HorizontalAlignment="Right"/>
        <Border Grid.Row="5"
            BorderBrush="Black"
            BorderThickness="1"
            Background="#c9c9c9"
            HorizontalAlignment="Right"/>

    </Grid>
</Window>
